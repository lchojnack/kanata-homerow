[Unit]
Description=Kanata keyboard remapper
Documentation=https://github.com/jtroo/kanata

[Service]
Environment=PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:$HOME/.local/bin:$HOME/.cargo/bin
Environment=DISPLAY=:0
Type=simple
ExecStart=/home/lukasz/.local/bin/kanata --cfg /home/lukasz/.config/kanata/config.kbd
Restart=no

[Install]
WantedBy=default.target
